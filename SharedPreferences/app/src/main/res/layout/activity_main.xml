<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_text_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="54dp"
        android:hint="Nome" />

    <EditText
        android:id="@+id/edit_text_idade"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_nome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="54dp"
        android:hint="Idade" />


    <Button
        android:id="@+id/button_escrever"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_idade"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="107dp"
        android:text="Escrever" />

    <Button
        android:id="@+id/button_ler"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_escrever"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="107dp"
        android:text="Ler" />

    <TextView
        android:id="@+id/text_view_visualizacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_ler"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:hint="O seu nome é ??? e sua idade é ???" />


</RelativeLayout>